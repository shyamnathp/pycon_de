#.kv file implementation of Float Button

<AddContactContent>:
    orientation: 'vertical'
    spacing: "12dp"
    size_hint_y: None
    height: self.minimum_height + dp(60)

    MDTextField:
        hint_text: "Name"

    MDTextField:
        hint_text: "Address"

    MDTextField:
        hint_text: "City"

    MDTextField:
        hint_text: "Mobile"

<ContactView>:

    # on_address: app.set_note_content(self.name, self.note_content)
    # on_city: app.set_note_title(self.note_index, self.note_title)
    orientation: 'vertical'
    adaptive_height: True
    md_bg_color: "gray"

    TwoLineIconListItem:
        id: address_label
        text: root.address
        secondary_text: root.city
        IconLeftWidget:
            icon: 'city'

    OneLineIconListItem:
        id: phone_label
        text: root.mobile
        IconLeftWidget:
            icon: 'phone'

    MDIconButton:
        icon: "delete"
        pos_hint: {'center_x': .5, 'center_y': .5}
        # on_release: app.delete_contact(root)

# Creation of main window
<MainWindow>:
    orientation: 'vertical'

    MDTopAppBar:
        title: "Contact Manager"
        md_bg_color: "7886CB"

    MDScrollView:
        MDGridLayout:
            cols: 1
            id: contact_list
            size_hint_y: None
            adaptive_height: True

    # Creating the Float button
    MDFloatingActionButton:
        icon: "plus"
        background_color: 1, 0, 1, 0
        pos_hint: {'center_x': .95, 'center_y': .5}
        on_release: app.add_contact_dialog()